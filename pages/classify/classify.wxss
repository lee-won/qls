/* pages/classify/classify.wxss */
.clearfix{
  content: '.';
  height:0;
  overflow:hidden;
  visibility: visible;
  clear:both;
}
.container{
  position:fixed;
  top:0;
  left:0;
  bottom:0;
  width:100%;
}
.wrapper{
  display: flex;
}
.left{
  flex:0 0 160rpx;
  background:rgba(0,0,0,0.05);
  height:100%;
  display: block;
}
.left-wrapper{
  position:fixed;
  top:0;
  left:0;
  bottom:0;
  width:160rpx;
  background:rgba(0,0,0,0.05);
}
.menu-item{
  height:100rpx;
  font-family: PingFangSC-Regular;
  font-size:26rpx;
  text-align: center;
  border-bottom: 2px solid #fff;
  box-sizing: border-box;
  display: table;
  width:160rpx;
  padding:0 10rpx;
}
.active{
  background:#fff;
  border-left:2px solid #f60;
  color:#f60;
}
.menu-item-text{
  display: table-cell;
  vertical-align: middle;
}
.right{
  flex:1;
  box-sizing: border-box;
  padding:0 20rpx;
}
.right-wrapper{
  position:fixed;
  top:0;
  bottom:0;
  right:20rpx;
  left:180rpx;
  width:inherit;
}
.right .title{
  display: block;
  height:100rpx;
  line-height:100rpx;
  font-family: PingFangSC-Regular;
  font-size:26rpx;
  background:#fff;
}
.right .content{
  background:rgba(0,0,0,0.05);
  padding:0 20rpx 20rpx 20rpx;
}

.course-item{
  display: inline-block;
  margin-right:15rpx;
  margin-top:20rpx;
  width:160rpx;
  height:230rpx;
  vertical-align: top;
}
.no-margin-right{
  margin-right:0;
}
.course-item .course-cover{
  display: block;
  height:160rpx;
  width:160rpx;
}
.course-item .course-name{
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size:24rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
  overflow: hidden;
}
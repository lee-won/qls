.container {
  height: 100%;
  box-sizing: border-box;
  padding:0 24rpx;
} 
.search{
  display: flex;
  height:84rpx;
  width:100%;
  box-sizing: border-box;
}
.search-right{
  display:block;
  flex: 1;
  width:80rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #E56241;
  letter-spacing: 0;
  height:84rpx;
  line-height:84rpx;
  text-align: right;
  
}
.search-left{
  flex:0 0 620rpx;
  width:200rpx;
  background: #FFFFFF;
  box-shadow: 0 1px 10px 0 rgba(230,228,228,0.50);
  display: flex;
  box-sizing:border-box;
}
.search-left .search_icon{
  flex:0 0 76rpx;
  height:36rpx;
  margin-top:24rpx;
}
.search-input{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #333333;
  letter-spacing: 0;
  height:84rpx;
  flex:1;
}
.search-history{
  margin-top:30rpx;
}
.history-title{
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #333333;
  letter-spacing: 0;
  height:44rpx;
  line-height:44rpx;
}
.history-list-item{
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #888888;
  letter-spacing: 0;
  height:68rpx;
  line-height:68rpx;
  background: #F6F6F6;
  border-radius: 2px;
  padding:12rpx 30rpx;
  margin-right:24rpx;
  word-break:normal;
  margin-top:24rpx;
}
.course-wrapper{
  margin:36rpx auto 0 auto;
  position:relative;
}
.title{
  font-family: PingFangSC-Semibold;
  height:56rpx;
  line-height:56rpx;
  font-size:32rpx;
  color: #000000;
  letter-spacing: 0;  
}
.course{
  padding:0;
  margin:0;
  margin-top:28rpx;
}
.course-item{
  display: inline-block;
  width:215rpx;
  margin:0 28rpx 24rpx auto;
}
.course-cover{
   position:relative;
}
.course-cover image{
  display: block;
  width:100%;
  height:272rpx;
}
.course-cover .cover-label{
  position:absolute;
  font-size:20rpx;
  background: rgba(229,98,65,0.54);
  border-radius: 4rpx;
  height:36rpx;
  line-height:36rpx;
  text-align: center;
  width:68rpx;
  bottom:10rpx;
  left:12rpx;
  color:#fff;
}
.course-name{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.scroll-wrapper{
  position:fixed;
  top:0;
  bottom:0;
  width:100%;
}
.list{
  position:fixed;
  top:120rpx;
  bottom:0;
  width:100%;
}
.list-item{
  width:702rpx;
  height:164rpx;
  display: flex;
  margin-bottom:30rpx;
  box-sizing:border-box;
}
.cover{
  flex:0 0 134rpx;
  width:134rpx;
  height:164rpx;
}
.outline{
  flex:1;
  display:block;
  padding-left: 24rpx;
  box-sizing:border-box;
}
.list .title{
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
}
.list .price{
  font-family: PingFangSC-Regular;
  font-size:28rpx;
  color:#f60;
}
.no-search-result{
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
  margin-top:200rpx;
  text-align:center;
}
.loading{
  text-align: center;
  height:80rpx;
  width:702rpx;
}
.loading-icon{
  width:14px;
  height:14px;
}
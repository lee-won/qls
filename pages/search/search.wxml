<view class="container">
  <view class="search">
    <view class="search-left">
      <image class="search_icon"  mode="aspectFit" src="/images/search_icon.png" bindtap='search'></image>
      <input class="search-input" value="{{searchValue}}"  bindinput="bindKeyInput" type="text" placeholder='我想搜索...'/>
    </view>
    <view class="search-right">
      <text wx:if="{{searchValue}}" bindtap='clearSearchValue'>取消</text>
    </view>
  </view>
  <view wx:if="{{!courses}}">
    <view class="search-history">
      <text class="history-title">搜索记录</text>
      <view class="history-list">
        <block wx:for="{{search_history}}" wx:key="{{index}}">
          <text class="history-list-item" data-history="{{item}}" bindtap='historySearch'>{{item}}</text>
        </block>
      </view>
    </view>
    <view class="course-wrapper">
      <text class="title">热门推荐</text>
      <view class="course">
        <block wx:for="{{recommends}}" wx:key="{{index}}">
          <view class="course-item" wx:if="{{(index+1)%3 !== 0}}">
            <navigator url="/pages/detail/detail?id={{item.course.id}}">
              <view class="course-cover">
                <image src="{{basic_url + item.course.icon}}" mode="aspectFill"></image>
                <text class="cover-label">{{item.course.level}}</text>
              </view>
              <text class="course-name">{{item.course.name}}</text>
            </navigator>
          </view>
          <view class="course-item" style="margin-right:0;" wx:else>
            <navigator url="/pages/detail/detail?id=21">
              <view class="course-cover">
                <image src="{{item.course.icon}}" mode="aspectFill"></image>
                <text class="cover-label">{{item.course.level}}</text>
              </view>
              <text class="course-name">{{item.course.name}}</text>
            </navigator>
          </view>
        </block>
        <view class="clearfix"></view>
      </view>
    </view>
  </view>
  <view wx:elif="{{courses!=='未找到相关课程'}}"  class="list">
    <block wx:for="{{courses}}"  wx:key="{{index}}">
    <navigator  url="{{'/pages/detail/detail?id='+ item.id}}">
      <view class="list-item">
          <image class="cover"  mode="aspectFill" src="{{basic_url + item.icon}}"></image>
          <view class="outline">
            <text class="title">{{item.name}}({{item.level}})</text>
            <text class="price">价格：¥{{item.price}}</text>
          </view>
      </view>
    </navigator>  
    </block>
  </view>
  <view wx:else>
    <text>{{courses}}</text>
  </view>
</view>
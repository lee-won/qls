/* pages/notice/notice.wxss */
.container{
  height:100%;
  padding:0 24rpx;
  box-sizing: border-box;
}
.logo{
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
  text-align: center;
}
.text{
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 0;
  text-indent: 56rpx;
  margin-top:40rpx;
}
.title{
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  font-weight: bold;
  color: #666;
  margin:40rpx 0 40rpx 0;
}
.file-item{
  display: flex;
  height:100rpx;
  margin-top:20rpx;
}
.type-pic{
  flex:0 0 80rpx;
  width: 80rpx;
  height:100rpx;
}
.name{
  flex:1;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666;
  padding-left:20rpx;
  box-sizing: border-box
}
.contact{
  display: block;
  margin:40rpx 0;
  color:#f60;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
}
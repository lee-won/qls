/**index.wxss**/
.clearfix{
  content: '.';
  height:0;
  overflow:hidden;
  visibility: visible;
  clear:both;
}
.search{
  background: #FFFFFF;
  box-shadow: 0 1px 10px 0 rgba(230,228,228,0.50);
  border-radius: 4px;
  height:84rpx;
  display: flex;
}
.search-icon{
  flex:0 0 76rpx;
  height:36rpx;
  margin-top:24rpx;
}
.search-input{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #B0B0B0;
  letter-spacing: 0;
  height:84rpx;
  flex:1;
}
.banner{
  margin-top:24rpx;
  height:272rpx;
}
.slide-image{
  width:100%;
  height:272rpx;
}
.course-wrapper{
  margin:36rpx auto 0 auto;
  position:relative;
}
.title{
  font-family: PingFangSC-Semibold;
  height:56rpx;
  line-height:56rpx;
  font-size: 40rpx;
  color: #000000;
  letter-spacing: 0;  
}
.change-btn{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #E56241;
  letter-spacing: 0;
  height:56rpx;
  line-height: 56rpx;
  position:absolute;
  right:40rpx;
  top:0;
}
.course{
  padding:0;
  margin:0;
  margin-top:28rpx;
}
.course-item{
  display: inline-block;
  width:215rpx;
  margin:0 28rpx 24rpx auto;
}
.course-cover{
   position:relative;
}
.course-cover image{
  display: block;
  width:100%;
  height:272rpx;
}
.course-cover .cover-label{
  position:absolute;
  font-size:20rpx;
  background: rgba(229,98,65,0.54);
  border-radius: 4rpx;
  height:36rpx;
  line-height:36rpx;
  text-align: center;
  width:68rpx;
  bottom:10rpx;
  left:12rpx;
  color:#fff;
}
.course-name{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
  overflow: hidden;
}
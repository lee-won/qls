<view class="container">
  <view class="head">
    <image class="cover" src="{{basic_url + desc.icon}}"></image>
    <text class="name">{{desc.name}}</text>
    <text class="level">{{'('+desc.level+')'}}</text>
  </view>
  <view class="content">
   <rich-text nodes="{{desc.brief}}" bindtap="tap"></rich-text>
  </view>
  <button bindtap='buy' class="buy-btn">¥{{desc.price}}.00  确认购买</button>
  <view class="modal" wx:if="{{modalFlag}}">
    <text class="modal-title">您需绑定手机号才能进行课程购买</text>
    <view>
      <input bindinput='bindKeyInput1' class="phone-input" type="number" placeholder='请绑定您的手机号' maxlength='11' />
      <button size="mini" bindtap='getCode'>获取短信验证码</button>
    </view>
    <view>
      <input  bindinput='bindKeyInput2' class="phone-input" type="text" placeholder='获取短信验证码'/>
    </view>
    <button size="mini" bindtap='sendData'>提交</button>
    <button size="mini" bindtap='closeModal'>关闭</button>
  </view> 
</view>